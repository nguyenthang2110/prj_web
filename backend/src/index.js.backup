// Import dashboard
app.post('/api/dashboards/import', authenticateToken, async (req, res) => {
  try {
    const { dashboard } = req.body;
    const newUid = generateUID();
    
    // Insert dashboard
    const dashResult = await pool.query(
      'INSERT INTO dashboards (uid, title, description, tags, created_by, data) VALUES ($1, $2, $3, $4, $5, $6) RETURNING *',
      [newUid, dashboard.title, dashboard.description, dashboard.tags, req.user.id, dashboard.data]
    );
    
    const newDashboard = dashResult.rows[0];
    
    // Insert panels
    if (dashboard.panels) {
      for (const panel of dashboard.panels) {
        await pool.query(
          'INSERT INTO panels (dashboard_id, title, type, position, datasource, targets, options) VALUES ($1, $2, $3, $4, $5, $6, $7)',
          [newDashboard.id, panel.title, panel.type, panel.position, panel.datasource, panel.targets, panel.options]
        );
      }
    }
    
    // Insert variables
    if (dashboard.variables) {
      for (const variable of dashboard.variables) {
        await pool.query(
          'INSERT INTO variables (dashboard_id, name, type, query, datasource, options) VALUES ($1, $2, $3, $4, $5, $6)',
          [newDashboard.id, variable.name, variable.type, variable.query, variable.datasource, variable.options]
        );
      }
    }
    
    res.status(201).json(newDashboard);
  } catch (err) {
    console.error('Import error:', err);
    res.status(500).json({ error: 'Import failed' });
  }
});

